<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Settings"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/serverUrlEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter server base URL"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:inputType="textUri"
            android:autofillHints="" />

        <Button
            android:id="@+id/saveUrlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save and Apply"/>

        <LinearLayout
            android:id="@+id/loggedInSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Settings"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default Playback Speed"
                android:textColor="#AAAAAA"/>

            <Spinner
                android:id="@+id/defaultSpeedSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro Membership"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/proStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:layout_marginTop="8dp"
                tools:text="Status: Musically Pro"/>

            <Button
                android:id="@+id/becomeProButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activate Pro with QR Code"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/proTutorialLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <TextView
                    android:id="@+id/proTutorialTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How does this work?"
                    android:textColor="#1DB954"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/proTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To get Pro, you'll need an admin to generate a special QR code for you. Once they've done that, tap the 'Activate Pro with QR Code' button above and scan the code they show you."
                    android:textColor="#AAAAAA"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/generateQrButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Pro QR (Admin)"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="8dp"/>

            <Switch
                android:id="@+id/downloadImagesSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download album art with songs"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/appVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            tools:text="App Version: 1.0 (15)" />

        <TextView
            android:id="@+id/serverVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            tools:text="Server Version: 1.0 (15)" />

    </LinearLayout>
</ScrollView>